{
  "name": "express_web-service",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "test": "jest --watch",
    "start": "nodemon index",
    "lint": "eslint ."
  },
  "author": "Shubh Shah",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "quotes": [
        "warn",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "eqeqeq": "warn",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "parser": "flow"
        }
      ],
      "no-unused-vars":"warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
